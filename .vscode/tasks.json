{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start HTTP Server",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "http.server",
                "-d",
                "site/",
                "8090"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev-server"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Tailwind CSS Watch",
            "type": "shell",
            "command": "npx",
            "args": [
                "tailwindcss",
                "-i",
                "tailwind.css",
                "-o",
                "./site/css/main.css",
                "--watch"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev-server"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Watch Blog Posts",
            "type": "shell",
            "command": "cd generator; fswatch -o ../posts/ | while read f; do echo 'Posts changed, regenerating blog...'; swift run gensite --blog; done",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev-server"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Dev Environment",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start HTTP Server",
                "Tailwind CSS Watch"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "dev-server"
            },
            "problemMatcher": []
        },
        {
            "label": "Dev Environment with Blog Watch",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Start HTTP Server",
                "Tailwind CSS Watch",
                "Watch Blog Posts"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "dev-server"
            },
            "problemMatcher": []
        }
    ]
}